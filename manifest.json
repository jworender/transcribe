{
  "manifest_version": 3,
  "name": "Audio Transcriber",
  "version": "1.0",
  "description": "Transcribe audio from any tab and display it in a sidebar. Allows custom LLM and Whisper endpoints.",
  "permissions": ["activeTab", "tabCapture", "storage", "notifications", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "options_page": "options.html",
  "action": {
    "default_title": "Audio Transcriber"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
